    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.12/css/all.css" integrity="sha384-G0fIWCsCzJIMAVNQPfjH08cyYaUtMwjJwqiRKxxE/rx96Uroj1BtIQ6MLJuheaO9" crossorigin="anonymous">
    <title>Categories</title>
   
</head>
<body>
    <%if(admin){%>
    <%- include('adminHeader') -%>
    <%}else{%>
    <%- include('header') -%>
    <%}%>
    <div class="container">
    	<h3>Item / Package Categories</h3>
		<table class="table table-sm table-hover">
  
			<tbody>
			<% for(c in categories){ %>
				<tr class="categories-table-row">
				<td><%= categories[c].name %></td>
				<td><a href="/<%= auction %>/categories/<%= categories[c]._id %>/delete"><i  class="far fa-trash-alt package-delete"></i></a></td>
				</tr>
			<%}%>
			</tbody>
		</table>

		<!-- Form - Add New Category -->

		<form action='/<%=auction%>/categories' method='post'>
			<div class="form-group row">
				<div class="col-sm-10">
					<input placeholder="Add New Category" type="text" name="name" id="categoryName" class="form-control" >
				</div>
			</div>
			<input type='submit' value='Add New Category' class="btn btn-default">
		</form>

	
    </div>
