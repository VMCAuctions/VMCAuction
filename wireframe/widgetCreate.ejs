      		<!-- <form action="/widgets" method="post"> -->
      		<form action="/widgets" enctype="multipart/form-data" method="post">
      		
			  	<div class="form-row">
					<div class="form-group col-md-6">
						<label for="name" class="label-name" >Widget Name</label>
						<input type="text" name="name" id="name" class="form-control">
					</div>
				
				</div>
				<div class="form-group">
					<label for="widgetImage" class="label-name text-black-50">Widget Image</label>
					<input type="file" name="widgetImage" id="widgetImage" class="form-control">
				</div>


