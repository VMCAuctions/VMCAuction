
		<div class="container">
			<div id="clerkSearch" class="row mb-3">
				<!-- Find supporters by last name -->
				<div id="search-lastName" class="col-4">
					<label for "lastName" class="label-search">Search by Last Name</label>
					<input class="form-control" type="search" id="lastName" placeholder="Last Name">
				</div>
				<!-- Find package by package name -->
				<div id="search-packageName" class="col-4">
					<label for "packageName" class="label-search">Search by Package Name</label>
					<input class="form-control" type="search" id="packageName" placeholder="Package Name">
				</div>
			</div>
			<!-- Search for Supporters-->
			<div id="supporterTable">
				<h3>Supporters</h3>
				<!--<%-JSON.stringify(cart,null,2)%>-->

				<table class="table table-striped table-bordered package-table">
					<thead>
						<tr>
							<th scope="col">Full Name</th>
							<th scope="col">Packages Won</th>
							<th scope="col">Total Bid</th>
							<th scope="col">Amount paid</th>
							<th scope="col">Payment Details</th>
							<th scope="col">Full Payment</th>
							<th scope="col">Outstanding balance</th>
							<th scope="col">Actions</th>
						</tr>
					</thead>
					<tbody id="carts">
						<% for (var u in users) {%>
							<% var user = users[u]%>
							<tr class="supporterRow">
								<td><%= user.firstName %> <%=user.lastName%></td>
								<td id="<%= user.userName + 'winning' %>">
									<ul>
										<% for (var p in cart[user.userName].packages) { %>
											<li><%= cart[user.userName].packages[p]._id %>. <%= cart[user.userName].packages[p].name %>
												($<%= cart[user.userName].packages[p].bids[cart[user.userName].packages[p].bids.length - 1].bidAmount.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %>)</li>
										<% } %>
									</ul>
								</td>
								<td id="<%= user.userName + 'total' %>">
									$<%= cart[user.userName].total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",") %>
								</td>
								<td class="full-payment-field font-weight-bold">
									$ <span id ="paid-amount-<%=user._id%>"><%=user.paidAmount%></span>
								</td>
								<td id ="payment-info-<%=user._id%>"><%=user.paymentInfo%>
								</td>
								<td class="full-payment-field">
									<select class="custom-select" id="checkbox-option-<%=user._id%>">
										<option value="-1" selected>Choose</option>
										<option value="1">Yes</option>
										<option value="0">No</option>
									</select>
								</td>
								<td>
									T1
							</td>
							<td>
								  <!-- Button trigger modal -->
								<button type="button" class="btn btn-sm btn-add btn-open-dialog" data-toggle="modal" data-target="#bid-checkout-input" data-id="<%=user._id%>" data-winner-name="<%=user.firstName%> <%=user.lastName%>" data-bid-amount = '<%=cart[user.userName].total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")%>'>Payment Details</button><br><br>
								<button type="button" class="btn btn-sm btn-add pdfBut"  data-first="<%- users[u].firstName %>" data-last="<%- users[u].lastName %>" data-user="<%- users[u].userName %>" data-total="<%- cart[users[u].userName].total %>">Invoice</button>
							</td>

							</tr>
						<% } %>
					</tbody>
				</table>
			</div>
			<!-- Modal for payment details -->
			<div class="modal fade" id="bid-checkout-input" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
				<div class="modal-dialog modal-lg modal-dialog-centered" role="document">
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="exampleModalLongTitle">Payment Details</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
            			<form class="form-horizontal justify-content-center" >
							<div class="modal-body">
								<input type = "hidden" id="modal-id">
								<div class="form-group row">
									<label class="control-label col-3 align-self-center">Name:</label>
									<div class="col-8 align-self-center">
										<span id="bidder-name"></span>
									</div>
								</div>
								<div class="form-group row">
									<label class="control-label col-3 align-self-center">Total Bid:</label>
									<div class="col-8 align-self-center">
                    				<span id="modal-total-amount"></span>
									</div>
								</div>
								<div class="form-group row">
									<label class="col-form-label col-3 align-self-center">Payment Amount:</label>
									<div class="col-8 align-self-center">
										<input type="text" class="form-control" id="modal-paid-amount">
									</div>
								</div>
								<div class="form-group row">
									<label class="form-check-label col-3">Full Payment Received?:</label>
									<div class="checkbox-inline">
										<input id ="modal-checkbox-payment" type="checkbox" data-toggle="toggle">YES
									</div>
								</div>

								<div class="form-group">
									<label class="col-form-label font-weight-bold">Payment Info:</label>
									<div>
                    					<textarea class = "col-12" id="modal-payment-info" cols="60" rows="8" placeholder="Source / Conf # / Account's Last 4 Digits"></textarea>
									</div>
								</div>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
								<button id = "submit-modal-btn" class="btn btn-sm btn-add" data-dismiss="modal">Submit</button>
							</div>
						</form>
					</div>
				</div>
			</div>
			<!-- for Package name -->
			<div id="packageTable">
                <h3>Packages</h3>
                <table class="table table-striped table-bordered package-table">
                    <thead>
                        <tr>
                            <th scope="col">Package Id</th>
                            <th scope="col">Image</th>
                            <th scope="col">Package Name</th>
                            <th scope="col">Winning Bidder</th>
                            <th scope="col">Winning Bid</th>
                        </tr>
                    </thead>
                    <tbody id="carts">
                        <% for (var i in packages) {%>
                            <tr class="packageRow">
                                <td><%= packages[i]._id%></td>
                                <td> <img src="/<%= packages[i].photo%>" alt=""> </td>
                                <td><%=packages[i].name%></td>
                                <td><%= packages[i].highBidder%></td>
                                <td>$<%= packages[i].highBid%></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

		</div>
        <script type="text/javascript">
			var cart = <%-JSON.stringify(cart)%>;
			var packages = <%-JSON.stringify(packages)%>;
			var users = <%-JSON.stringify(users)%>;

		</script>
		<!-- search box scripts -->
		<script type="text/javascript">
			var auction = <%-JSON.stringify(auction)%>;
			$(document).ready(function () {
				$("#supporterTable").hide();
				$("#packageTable").hide();
				$("#lastName").on("keyup", function () {
					var value = $(this).val().toLowerCase();

					if (value == '') {
						$("#supporterTable").hide();
					} else {
						$("#supporterTable").show();

						$(".supporterRow").filter(function () {
							$(this).toggle($(this).text().toLowerCase().indexOf(value) > 0);
						});
					};
				});

				$("#packageName").on("keyup", function () {
					var value = $(this).val().toLowerCase();
					if (value == '') {
						$("#packageTable").hide();
					} else {
						$("#packageTable").show();
						$(".packageRow").filter(function () {
							$(this).toggle($(this).text().toLowerCase().indexOf(value) > 0);
						});
					};
				});
			})

			$(document).on("click", '.btn-open-dialog', function () {
				let name = $(this).data('winner-name')
				let amount = $(this).data('bid-amount')
				let id = $(this).data('id')
				// $('form')[0].setAttribute('action', `#`);
				$(".modal-body #bidder-name").html( name )
				$(".modal-body #modal-total-amount").html( amount )
				$(".modal-body #modal-id").val( id )

				$('#modal-checkbox-payment'). click(function(){
					if($(this).prop("checked") && !verifyFullyPaid()){
						alert("The amount isn't fully paid. Please check the payment again!");
						$("#modal-checkbox-payment").prop("checked", false);
						$('#modal-checkbox-payment').focus();
					}
				});
      		});

			function verifyFullyPaid(){
				let paid = parseFloat($("#modal-paid-amount").val());
				let total =parseFloat($("#modal-total-amount").html().replace(/,/g,''));
				let dif = total - paid;
				return dif === 0;
			}

			$("#submit-modal-btn").click(function(){
				let paidAmount = $("#modal-paid-amount").val();
				let paymentInfo = $("#modal-payment-info").val();
				let bidderId = $("#modal-id").val();
				let fullAmount = $("#modal-checkbox-payment").prop("checked");
				let totalPayment =parseFloat($("#modal-total-amount").html().replace(/,/g,''));

				//console.log("paidAmount", paidAmount);
				$(`#paid-amount-${bidderId}`).html(paidAmount);
				$(`#payment-info-${bidderId}`).html(paymentInfo);
				if(fullAmount){
					$(`#checkbox-option-${bidderId}`).val(1);
				}else{
					$(`#checkbox-option-${bidderId}`).val(0);
				}
				$.ajax({
					contentType: 'application/json',
					data: JSON.stringify({
						"userId": bidderId,
						"fullyPaid":fullAmount,
						"paymentInfo":paymentInfo,
						"auction":auction,
						"paidAmount":paidAmount,
						"totalPayment":totalPayment
					}),
					dataType: 'json',
					success: function(data){
						app.log("control succeeded"); 
					},
					error: function(){
						app.log("control failed");
					},
					processData: false,
					type: 'POST',
					url: `/${auction}/clerkCheckOut/updatePayment`
				});
				//TODD: do ajax call to update the database
			});


			$(".pdfBut").click(function(){
				let firstName = $(this).data('first')
				let lastName = $(this).data('last')
				let userName = $(this).data('user')
				let totalBid = $(this).data('total').toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
				let newCart = cart;
				let allUsers = users;
				let auctionName = 'The VMC Foundation <%= auctionDetails.name %>';
				let auctionImage = '<%= auctionDetails.headerImage %>';

				let today = new Date();
				let dd = String(today.getDate()).padStart(2, '0');
				let mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
				let yyyy = today.getFullYear();
				today = mm + '/' + dd + '/' + yyyy;

				function userInfo(allUsers){
					for(var i = 0; i< allUsers.length; i++){
						if(userName == allUsers[i].userName ){
							return allUsers[i];
						}
					}
				}

				function buildTable(crt) {
					tableData = []
					columns = ['_id','name','value','bids']
					let sum  = 0;


					tableData.push([{text: 'Package ID', style: 'tableHeader', alignment: 'center'}, {text: 'Package Name', style: 'tableHeader', alignment: 'center'}, {text: 'Value', style: 'tableHeader', alignment: 'center'}, {text: 'Amount', style: 'tableHeader', alignment: 'center'}])
					crt.forEach(function(row) {
						var rowData = []

						for(var x = 0; x < columns.length; x++) {
							if(x == columns.length - 1) {
								tmpBids = row.bids
								winBid = tmpBids[tmpBids.length - 1]
								winAmt = winBid.bidAmount.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
								rowData.push("$"+winAmt)
							} else {
								rowData.push(row[columns[x]])
							}
						}
						tableData.push(rowData);
					})

					for( var i = 1; i< tableData.length; i++){
						sum = sum + tableData[i][2];	
					}

					for(var i =1; i < tableData.length; i++){
						tableData[i][2] = "$"+tableData[i][2].toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")
					}

					return [tableData,sum.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",")]
				}

				docDef = {
					content: [

					{
						style: 'contact',
						alignment: 'justify',
						columns: [
							{ text: firstName + ' ' + lastName, style: 'name'}
							// {
							// 	image: auctionImage,
							// 	width: 160,
							// 	height: 90,
							// },
						],
					},





					{
						style: 'contact',
						alignment: 'justify',
						columns: [
							{
								text: 'Phone Number: '+ userInfo(allUsers).phone,
							},
							{
								text: 'Table Number: '+ userInfo(allUsers).table,
							}
						],
					},



					{
						text: 'Email Address: ' + userInfo(allUsers).userName,
						style: 'contact'
					},

	

					{
						alignment: 'justify',
						columns: [
							{
								text: auctionName,
								style: 'header',
								margin: [0,10,0,0]
							},
							{
								text: today,
								width: '65',
								margin: [0,10,0,0],
								fontSize: 10,
								bold: true
							}
						]
					},

					{
						style:'body',
						table: {
							widths: [60, 315, 50, 50],
							headerRows: 1,
							body: buildTable(newCart[userName].packages)[0]
						}
					},
					
					{
						style: 'totals',
						table: {
							widths: [325,50,50,50],
							body: [
								[{text:""},{text: 'Total: ', style:'tableHeader'},{text: "$"+buildTable(newCart[userName].packages)[1]},{text: "$"+totalBid}]

					]
						}
					},


					{
						style: 'summary',
						table: {
							widths: [500],
							body: [
								[{text: 'Total Charges: $'+totalBid, alignment: 'right'}],
								[{text: 'Total Payments: $'+ totalBid, alignment: 'right'}],
								[{text: 'Balance Due: $0.00', alignment: 'right'}]
					]
						}
					},
					
					{
						text: 'Tax ID:77-01877890',
						style: 'taxId'
					},

					{
						text: '751 S Bascom Ave, San Jose, CA 95128',
						alignment: 'center',
						style: 'footer1'
					},
					
					{
						text: 'Please refrain this receipt for your records. The amount of your contributions that is deductible for federal income tax purposes is limited to the excess of money contributed over the fair market value of goods or services provided by the organization.',
						alignment: 'center',
						style: 'footer1'
					},

					{
						text: 'Thank you for supporting VMC Foundation!',
						alignment: 'center',
						style: 'footer2'
					}

					],
					styles: {

						name: {
							bold: true,
							fontSize: 21,
							color: 'black',
							normal: 'Helvetica',
							margin: [0,20,0,0]
						},

						totals: {
							bold: true,
							normal: 'Helvetica',
							fontSize: 10
						},

						contact: {
							fontSize: 10
						},

						header: {
							bold: true,
							fontSize: 16,
							color: 'black',
							normal: 'Helvetica'

						},

						tableHeader: {
							bold: true,
							fontSize: 10,
							color: '#FFF',
							normal: 'Helvetica',
							fillColor: '#003D79'
						},
						
						body: {
							margin: [0,10,0,0],
							normal: 'Helvetica',
							fontSize: 10
						},
						summary: {
							margin: [0,50,0,0],
							normal: 'Helvetica',
							bold: true,
							fontSize: 10
						},

						taxId: {
							alignment: 'center',
							bold: true,
							fontSize: 11,
							margin: [0,50,0,0],
						},

						footer1: {
							normal: 'Helvetica',
							fontSize: 9,
							italic: true
						},

						footer2: {
							normal: 'Helvetica',
							fontSize: 11,
							margin: [0,25,0,0],
						}


					}
				}
				pdfMake.createPdf(docDef).open()
			})
		</script>
