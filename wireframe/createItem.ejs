<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>create Item</title>
    <script src="https://code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.17.0/dist/additional-methods.min.js"></script>
  </head>
  <body>
    <%if(admin){%>
    <%- include('admin_header') -%>
    <%}else{%>
      <%- include('header') -%>
    <%}%>
    <div class="container mt-4">
      <h3>Create Items</h3>
      <form action="/api/items" id="itemsForm" method="post">
        <div class="form-group row">
          <label   class="col-sm-2 col-form-label">Item Name</label>
          <div class="col-sm-10">
            <input placeholder="Item Name" id="itemName" type="text" name="itemName" class="form-control" >
          </div>
        </div>
        <!-- <input type="text" name="itemName" placeholder="Item Name"> -->

        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Add Donor</label>
          <div class="col-sm-10">
            <input placeholder="Donor" type="text" name="donor" class="form-control" >
          </div>
        </div>
        <!-- <input type="text" name="donor" placeholder="Donor"> -->


        <select id="category" class="custom-select" name="category">
          <% for (var c in categories){%>
          <option selected value="<%=categories[c].name%>"><%=categories[c].name%></option>
          <%}%>
        </select>

        <div class="form-group row">
          <!-- <label class="col-sm-2 col-form-label">Add Category</label> -->
          <div class="col-sm-10">
            <input placeholder="Fair Market Value" id="fairMarketValue" type="text" name="fairMarketValue" class="form-control" >
          </div>
        </div>
        <!-- <input type="text" name="fairMarketValue" value="" placeholder="Fair Market Value"> -->

        <div class="form-group">
          <label for="itemDescription">Item Description</label>
          <textarea id="itemDescription" name="itemDescription" class="form-control" rows="3"></textarea>
        </div>
        <!-- <textarea name="itemDescription" rows="8" cols="40" placeholder="Item Description"></textarea> -->

        <div class="form-group">
          <label for="itemRestriction">Item Restriction</label>
          <textarea name="itemRestriction" class="form-control" rows="3"></textarea>
        </div>
        <!-- <textarea name="itemRestriction" rows="8" cols="40" placeholder="Item restriction"></textarea> -->

        <input type="submit" name="" value="Submit" class="btn btn-default">
      </form>
    </div>
    <script>

    var validator = $("#itemsForm").validate({
      rules: {
        itemName: {
          required: true,
          minlength: 4
        },
        category: {
          required: true
        },
        fairMarketValue:{
          required: true,
          number: true
        },
        itemDescription: {
          required: true,
          minlength: 4
        }
      }
    });
    validator.form();

    </script>
  </body>
</html>
