<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%=user.userName%></title>
  </head>
  <body>
    <nav>
      <a href="/api/items">Catalog</a> |
      <a href="/api/packages">Packages/Bids</a> |
      <%if (admin){%>
        <a href='/api/users'>All Users</a> |
        <a href="/api/items/new"> Add Item</a> |
        <a href="/api/packages/new"> Add Package</a> |
      <%}%>
      <%if (userName){%>
        <a href='/api/users/logout'>Logout</a> |
      <%}else{%>
      <a href='/api/users_login'>Login</a> |
      <a href="/users/register">Register </a> |
      <%}%>
    </nav>
    <h3><%=user.userName%>'s Page</h3>
    <table>
      <thead>
        <th>package Name</th>
        <th>Who's Winning</th>
      </thead>
      <tbody>
        <%for(let i =0; i<packages.length; i++){%>
          <tr>
          <td><a href="/api/packages/<%=packages[i]._id%>"><%=packages[i].name%></a></td>
          <%if(packages[i].bids[packages[i].bids.length-1].name === userName){%>
            <td>You!!!</td>
          <%}else{%>
          <td><%=packages[i].bids[packages[i].bids.length-1].name%></td>
          <%}%>


          </tr>
          <%}%>

      </tbody>
    </table>
  </body>
</html>
