<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%=user.userName%></title>
  </head>
  <body>
    <%if(admin){%>
    <%- include('admin_header') -%>
    <%}else{%>
      <%- include('header') -%>
    <%}%>
    <h3><%=user.userName%>'s Page</h3>
    <table>
      <thead>
        <th>Package Name</th>
        <th>Who's Winning</th>

        <th>Interested</th>
      </thead>
      <tbody>
        <%for(let i =0; i< packages.length; i++){%>
          <%if(packages[i]){%>
            <tr>
              <td><a href="/api/packages/<%=packages[i]._id%>"><%=packages[i].name%></a></td>
              <%if(packages[i].bids && packages[i].bids[packages[i].bids.length-1].name == user.userName){%>
                <td>You!!!</td>
              <%}else{%>
                <td><%=packages[i].bids[packages[i].bids.length-1].name%></td>
              <%}%>
              <td> <button type="button" name="button"> <a href="/users/uninterested/<%=packages[i]._id%>">No longer interested</a> </button> </td>
            </tr>
          <%}%>

        <%}%>

      </tbody>
    </table>
  </body>
</html>
