<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%=user.userName%></title>
  </head>
  <body>
    <%if(admin){%>
    <%- include('admin_header') -%>
    <%}else{%>
      <%- include('header') -%>
    <%}%>
    <h3><%=user.userName%>'s Page</h3>
    <table>
      <thead>
        <th>Package Name</th>
        <th>Who's Winning</th>
        <th>Action</th> 
      </thead>
      <tbody>
        <%for(let i =0; i<packages.length; i++){%>
          <tr>
          <td><a href="/api/packages/<%=packages[i]._id%>"><%=packages[i].name%></a></td>
          <%if(packages[i].bids[packages[i].bids.length-1].name === userName){%>
            <td>You!!!</td>
            <td><a href='/packages/cancel_bid/<%=packages[i]._id %>'><button>Cancel Bid</button></a></td>
          <%}else{%>
          <td><%=packages[i].bids[packages[i].bids.length-1].name%></td>
          <%}%>


          </tr>
          <%}%>

      </tbody>
    </table>
  </body>
</html>
