<div class="text-center" id="supporter-search">
        <!-- Find supporters by last name -->
        <div id="search-lastname">
            <label for "lastname" class="label-search">Search by Name or Email</label>
            <input class="form-control" type="search" id="lastname" placeholder="Name or Email">      
        </div>        
</div>
<div class="container">
    <div id="supportertable">
        <h3>Supporters</h3>
        <table class="table table-striped table-bordered package-table">
            <thead>
                <tr>
                    <th scope="col">Full Name</th>
                    <!-- <th scope="col">Last Name</th> -->
                    <th scope="col">Email</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Table #</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody id="carts">
                <% for (var u in users) {%>
                    <tr class="supporterRow">
                        <td>
                            <button id="<%=users[u]._id%>" class="btn btn-link updateBtn"><%=users[u].firstName%> <%=users[u].lastName%></button>
                        </td>
                        <td>
                            <%=users[u].userName%>
                        </td>
                        <td class="phone-<%=users[u]._id%>">
                            <%=users[u].phone%>
                        </td>
                        <td>
                            <%=users[u].table%>
                        </td>  
                        <td>
                            <!-- <button type="button" id="sendLinkButton" class="btn btn-sm btn-add" data-toggle="modal" data-target="#itemsModal">Send Auction link</button> -->
                            <button type="button" class="sendLinkButton btn btn-sm btn-add" id="<%=users[u]._id%>" >Send Auction link</button>
                        </td>               
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    <div class="card regist-card mb-4" id="user-info">

    </div>
</div>
<script>
	$(document).ready(function(){
		$("#supportertable").hide();
		$("#lastname").on("keyup", function () {
			var value = $(this).val().toLowerCase();
			if (value == '') {
				$("#supportertable").hide();
			} else {
				$("#supportertable").show();
				$(".supporterRow").filter(function () {
				$(this).toggle($(this).text().toLowerCase().indexOf(value) > 0);
			});
			};
		});
        $('#user-info').hide();
        $('.updateBtn').click(function(){
            var userID = (this.id)
            $('#user-info').load('/'+userID+'/clerkUserUpdate')
            $('#user-info').show();
		});

		$(".sendLinkButton").click(function(e){
            e.preventDefault();
			var userID = (this.id);
            var auctionID = '<%=auction._id%>';
            console.log("here")
            var phone = this
            console.log("PHONE?", phone)
            console.log("USER", userID)
            console.log("AUCTION", auctionID)
            
		});

		
		


    })
</script>